{{# each products}}
    <div class="row">
        {{# each this }}
           <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <img src="{{this.imagePath}}" alt="..." class="img-responsive">
                <div class="caption">
                  <h3>{{this.title}}</h3>
                  <p class="description">{{this.description}}</p>
                  
                      <div class="clearfix">
                          <div class="price pull-left">${{this.price}}</div>
                          <a href="/info/" class="btn btn-success" role="button">Info +</a>
                          <a href="/add-to-cart/{{this._id}}" class="btn btn-warning" role="button">Buy</a>
                      </div>
                </div>
              </div>
            </div>
         {{/each}}
      </div>
{{/each}}





